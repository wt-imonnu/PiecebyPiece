@model PiecebyPiece.Models.mCERTIFICATE
@using System.Globalization;

@{

    Layout = null;
    string fullName = $"{Model.userName} {Model.userSurname}";
    string formattedDate = Model.cerDate.ToString("dd MMMM yyyy", CultureInfo.InvariantCulture);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.cerID - Certificate - @fullName</title>

    <style>
        html, body {
            width: 100%;
            height: 100%;
            background-color: #5AB2A6;
            font-family: 'Arial Black', Arial, sans-serif;
            color: #000000;
        }

        .certificate-page {
            background-color: #FCF8F5;
            border-radius: 20px;
            width: 90%;
            height: 90%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .certificate-id {
            position: absolute;
            top: 20px;
            color: #FCF8F5;
            font-size: 12px;
            font-weight: 300;
        }

        .logo-section {
            margin-bottom: 20px;
        }

            .logo-section img {
                max-width: 120px;
                height: auto;
                object-fit: contain;
                display: block;
                margin: 0 auto;
            }

        .main-completion {
            width: 100%;
        }

        .text-small {
            font-size: 16px;
            margin-bottom: 5px;
        }

        .completion-header {
            font-size: 60px;
            font-weight: bold;
            letter-spacing: 2px;
            margin-bottom: 20px;
            line-height: 1;
        }

        .user-name-field {
            font-size: 45px;
            font-weight: bold;
            color: #000000;
            border-bottom: 3px solid #000000;
            display: inline-block;
            padding-bottom: 5px;
            margin: 30px 0;
            line-height: 1.2;
        }

        .course-title-field {
            font-size: 30px;
            font-weight: bold;
            color: #000000;
            margin-top: 15px;
            line-height: 1.2;
        }

        .issue-date-field {
            font-size: 18px;
            font-weight: 300;
            margin-top: 10px;
            color: #000000;
        }

        .signatures-area {
            margin-top: 50px;
            width: 100%;
            line-height: 1.1;
        }

            .signatures-area img {
                width: 200px;
                height: auto;
                display: block;
                margin: 0 auto 5px auto;
                object-fit: contain;
            }

        .signature-text {
            font-size: 14px;
            font-weight: 300;
            margin: 5px 0 0 0;
            font-weight: bold;
        }

        .signature-role {
            font-size: 12px;
            font-weight: 300;
            color: #000000;
        }
    </style>
</head>
<body>
    <center>
        <div class="certificate-page">

            <div class="main-completion">
                <div class="text-small" style="margin-top: 100px;">CERTIFICATE OF</div>
                <div class="completion-header">COMPLETION</div>

                <div class="text-small">THIS CERTIFICATE IS PROUDLY PRESENTED TO</div>

                <div class="user-name-field">@fullName</div>

                <div class="text-small" style="margin-top: 100px;">HAS SUCCESSFULLY COMPLETED THE ONLINE COURSE:</div>

                <div class="course-title-field">@Model.courseName</div>

                <div class="issue-date-field" style="margin-top: 80px;">issue on @formattedDate</div>

                <div class="issue-date-field">Certificate ID: @Model.cerID</div>
            </div>

            <div class="signatures-area" style="margin-top: 100px;">
                <p class="signature-text">Piece by Piece</p>
                <p class="signature-role">Online Learning Platform</p>
            </div>

        </div>
    </center>

</body>
</html>