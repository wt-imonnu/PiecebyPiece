@model List<PiecebyPiece.Models.mCERTIFICATE>

@{
    ViewData["Title"] = "My Certificates";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="box-body mt-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="fw-bold">My Certificate</h1>
        <span class="text-muted">All certificates: @Model?.Count()</span>
    </div>

    <div class="mb-4">
        <hr />
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info shadow-sm text-center py-4" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>You have no certificate yet</strong><br />
            Complete the lessons to receive your certificate!
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 12%">ID</th>
                            <th style="width: 35%">Course</th>
                            <th style="width: 22%">Date</th>
                            <th style="width: 15%">Status</th>
                            <th style="width: 16%" class="text-center">Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cert in Model)
                        {
                            <tr>
                                <td class="align-middle">@cert.cerID</td>

                                <td class="align-middle">
                                    <div class="fw-semibold">@cert.courseName</div>
                                    <small class="text-muted">
                                        @cert.courseName
                                    </small>
                                </td>

                                <td class="align-middle">
                                    @cert.cerDate.ToString("dd MMMM yyyy")
                                </td>

                                <td class="align-middle">
                                    <span class="badge bg-success px-3 py-2">
                                        Received
                                    </span>
                                </td>

                                <td class="text-center align-middle">
                                    <a asp-controller="cCertificate"
                                       asp-action="Download"
                                       asp-route-enrollID="@cert.enrollID"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        <i class="bi bi-download"></i> PDF
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
