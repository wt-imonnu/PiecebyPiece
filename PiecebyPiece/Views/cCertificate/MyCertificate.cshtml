@model List<PiecebyPiece.Models.mCERTIFICATE>
@using System.Globalization;

@{
    ViewData["Title"] = "My Certificates";
    Layout = "~/Views/Shared/_Layout_Navbar.cshtml";
}


<center><span class="header-title">Create User</span></center>


<div class="box-body">

        <span class="text-muted">All certificates: @(Model?.Count() ?? 0)</span>


    <div class="mb-4">
        <hr />
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info shadow-sm text-center py-4" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>You have no certificate yet</strong><br />
            Complete the lessons to receive your certificate!
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 10%">ID</th>
                            <th style="width: 35%">Course</th>
                            <th style="width: 22%">Date</th>
                            <th style="width: 16%" class="text-center">Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cert in Model)
                        {
                            <tr>
                                <td class="align-middle">@cert.cerID</td>

                                <td class="align-middle d-flex align-items-start text-start">@cert.Enrollment.Course.courseName</td>

                                <td class="align-middle">
                                    @cert.cerDate.ToString("dd MMMM yyyy", CultureInfo.GetCultureInfo("en-US"))
                                </td>

                                <td class="text-center align-middle">
                                    <a asp-controller="cCertificate"
                                       asp-action="Certificate"
                                       asp-route-enrollID="@cert.enrollID"
                                       class="btn btn-black-icon"
                                       target="_blank">
                                        <i class="bi bi-download"></i> Download
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>