@model PiecebyPiece.Models.mCOURSE

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<center><span class="header-title">Create Course</span></center>


<div class="row">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="box-body-sm">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="courseSubject" class="control-label">Subject</label>
                        <input type="hidden" asp-for="courseSubject" id="hiddenCourseSubject" />
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle w-100 text-start"
                                    type="button"
                                    id="subjectDropdownButton"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                -- Select Subject --
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="subjectDropdownButton" id="subjectDropdownList">
                                <li><a class="dropdown-item subject-item" href="#" data-value="MTH">Mathematics</a></li>
                                <li><a class="dropdown-item subject-item" href="#" data-value="PHY">Physics</a></li>
                                <li><a class="dropdown-item subject-item" href="#" data-value="COD">Programming</a></li>
                                <li><a class="dropdown-item subject-item" href="#" data-value="PROD">Production</a></li>
                                <li><a class="dropdown-item subject-item" href="#" data-value="ART">Art & Design</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-9">
                    <div class="form-group">
                        <label asp-for="courseName" class="control-label">Course Name</label>
                        <input asp-for="courseName" class="form-control" />
                        <span asp-validation-for="courseName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label asp-for="courseDescription" class="form-label">Description</label>
                    <textarea asp-for="courseDescription" class="form-control"></textarea>
                    <span asp-validation-for="courseDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="coursePhoto" class="control-label">Uplaod Thumbnail</label>
                    <input asp-for="coursePhoto" type="file" class="form-control" />
                    <span asp-validation-for="coursePhoto" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row" style="margin-top: 10px;">
            <div class="col-md-6 mb-2">
                <a asp-action="Index" class="btn-cancel" aria-label="button">Cancle</a>
            </div>
            <div class="col-md-6">
                <input type="submit" value="Save" class="btn-save" aria-label="button" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dropdownItems = document.querySelectorAll('#subjectDropdownList .subject-item');
            const hiddenInput = document.getElementById('hiddenCourseSubject');
            const dropdownButton = document.getElementById('subjectDropdownButton');
            const placeholderText = '-- Select Subject --';
            if (hiddenInput.value === "") {
                 dropdownButton.textContent = placeholderText;
            }

            dropdownItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();

                    const selectedValue = this.getAttribute('data-value');
                    const selectedText = this.textContent.trim();

                    hiddenInput.value = selectedValue;
                    if (selectedValue === "") {
                        dropdownButton.textContent = placeholderText;
                    } else {
                        dropdownButton.textContent = selectedText;
                    }

                    const validationSpan = document.querySelector(`span[data-valmsg-for="courseSubject"]`);
                    if (validationSpan) {
                        validationSpan.textContent = '';
                    }
                });
            });
        });
    </script>
}