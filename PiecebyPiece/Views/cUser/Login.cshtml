@model PiecebyPiece.Models.mUSER

<div class="container overflow-hidden text-center" style="background-color:white; border-radius:15px; padding:50px;">
    <div class="row align-items-center">

        <!-- Logo -->
        <div class="col-12 col-md-6 mb-4 mb-md-0 d-flex justify-content-center">
            <img src="~/images/logoG.jpg"
                 alt="logo"
                 class="rounded-circle img-fluid"
                 style="max-width:300px; height:auto; object-fit:cover;" />
        </div>

        <!-- Form -->
        <div class="col-12 col-md-6">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="userEmail" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label asp-for="userEmail" for="floatingInput">Email address</label>
                    <span asp-validation-for="userEmail" class="text-danger"></span>
                </div>

                <div class="form-floating mb-5">
                    <input asp-for="userPassword" class="form-control" id="floatingPassword" placeholder="Password">
                    <label asp-for="userPassword" for="floatingPassword">Password</label>
                    <span asp-validation-for="userPassword" class="text-danger"></span>
                </div>


                <div class="form-group mb-2">
                    <input type="submit" value="Log in" class="btn btn-yellow w-100" />
                </div>

                <p>Or</p>

                <a asp-controller="Home" asp-action="SignUp" class="btn-black w-100">
                    Create New Account
                </a>


            </form>
        </div>
    </div>
</div>

