<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PiecebyPiece</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/card-box.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/BankStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PiecebyPiece.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <nav class="navbar navbar-expand-sm navbar-light mb-3" style="background: transparent; box-shadow: none; border: none;">
                        <div class="row w-100 align-items-center">

                            <!-- LOGO -->
                            <div class="col-2 d-flex align-items-center">
                                <a asp-area="" asp-controller="Home" asp-action="Home">
                                    <img src="~/images/logo.png" alt="PiecebyPiece" style="height: 70px; object-fit: contain;">
                                </a>
                            </div>

                            <!-- MENU -->
                            <div class="col d-flex justify-content-center" style="white-space: nowrap;">
                                <ul class="nav">
                                    <li class="nav-item" style="margin: 0 10px;">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs" style="font-weight:600;">About Us</a>
                                    </li>
                                    <li class="nav-item" style="margin: 0 10px;">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs" style="font-weight:600;">Contact Us</a>
                                    </li>
                                </ul>
                            </div>


                            <!-- BUTTON -->
                            <div class="col-3 d-flex justify-content-end">
                                <a class="btn btn-yellow" asp-area="" asp-controller="cUser" asp-action="Login"
                                   style="white-space: nowrap;">Login</a>
                            </div>

                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>







    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        /* FOOTER SECTION */
        .custom-footer {
            background: #5AB2A6; /* สีพื้นหลังเหมือนภาพ */
            text-align: center;
            margin-top: 20x;
            border-top-left-radius: 0px;
            border-top-right-radius: 0px;
        }

        .footer-logo-section {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
        }

        /* โลโก้จริง */
        .footer-logo-img {
            width: 90px;
            height: 90px;
            object-fit: contain; /* ให้โลโก้ไม่บิด */
        }

        .footer-logo-text h2 {
            margin: 0;
            font-size: 32px;
            font-weight: 700;
            color: #000;
            line-height: 1.1;
        }

        .footer-logo-text h3 {
            margin: 0;
            font-size: 28px;
            font-weight: 700;
            color: #fff;
            line-height: 1.1;
        }

        .footer-description {
            margin-top: 25px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
            font-size: 14px;
            color: #fff;
        }

        /* RESPONSIVE */
        @@media(max - width: 600px) {
            .footer-logo-img {
                width: 70px;
                height: 70px;
            }

            .footer-logo-text h2 {
                font-size: 26px;
            }

            .footer-logo-text h3 {
                font-size: 22px;
            }
        }
    </style>


    <!-- ================= FOOTER ================= -->
    <hr />
    <footer class="custom-footer">
        <div class="footer-logo-section">

            <!-- เปลี่ยนโลโก้ตรงนี้ -->
            <img src="~/images/logo.png" class="footer-logo-img" />

        </div>

        <p class="footer-description">
            <h2>PiecebyPiece</h2>
            <h3 style="color: white;">This website is for educational purposes and is not for profit.</h3>
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
