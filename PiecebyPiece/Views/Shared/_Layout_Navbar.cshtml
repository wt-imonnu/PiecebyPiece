<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PiecebyPiece</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/card-box.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/BankStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PiecebyPiece.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <nav class="navbar navbar-expand-sm navbar-light mb-3" style="background: transparent; box-shadow: none; border: none;">
                        <div class="row w-100 align-items-center">


                            <!-- LOGO -->
                            <div class="col-2 d-flex align-items-center">
                                <a asp-controller="cUserPersp" asp-action="GoToMyCourse">
                                    <img src="~/images/logo.png" alt="PiecebyPieceLogo"
                                         style="height: 70px; object-fit: contain;">
                                </a>

                            </div>


                            <!-- PROFILE -->
                            <div class="col-10 d-flex justify-content-end">
                                @{
                                    string profileImagePath = ViewData["UserPhotoPath"]?.ToString() ?? "/images/default_profile.png";
                                    string fullName = $"{ViewData["UserName"]} {ViewData["UserSurname"]}";
                                }

                                <div class="text-end me-3 d-none d-sm-block">
                                    <div class="fw-bold text-white">@fullName</div>
                                    <div class="small text-white-50">ID: @ViewData["UserID"]</div>
                                </div>



                                <a class="p-0 border-0 bg-transparent"
                                   data-bs-toggle="offcanvas"
                                   href="#profileOffcanvas"
                                   role="button"
                                   aria-controls="profileOffcanvas">

                                    <img src="@profileImagePath"
                                         alt="User Profile"
                                         class="rounded-circle border-0"
                                         style="width: 45px; height: 45px; object-fit: cover;">
                                </a>
                            </div>

                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        /* FOOTER SECTION */
        .custom-footer {
            background: #5AB2A6; /* สีพื้นหลังเหมือนภาพ */
            text-align: center;
            margin-top: 20x;
            border-top-left-radius: 0px;
            border-top-right-radius: 0px;
        }

        .footer-logo-section {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
        }

        /* โลโก้จริง */
        .footer-logo-img {
            width: 90px;
            height: 90px;
            object-fit: contain; /* ให้โลโก้ไม่บิด */
        }

        .footer-logo-text h2 {
            margin: 0;
            font-size: 32px;
            font-weight: 700;
            color: #000;
            line-height: 1.1;
        }

        .footer-logo-text h3 {
            margin: 0;
            font-size: 28px;
            font-weight: 700;
            color: #fff;
            line-height: 1.1;
        }

        .footer-description {
            margin-top: 25px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
            font-size: 14px;
            color: #fff;
        }

        /* RESPONSIVE */
        @@media(max - width: 600px) {
            .footer-logo-img {
                width: 70px;
                height: 70px;
            }

            .footer-logo-text h2 {
                font-size: 26px;
            }

            .footer-logo-text h3 {
                font-size: 22px;
            }
        }
    </style>


    <!-- ================= FOOTER ================= -->
    <hr />
    <footer class="custom-footer">
        <div class="footer-logo-section">

            <!-- เปลี่ยนโลโก้ตรงนี้ -->
            <img src="~/images/logo.png" class="footer-logo-img" />

        </div>

        <p class="footer-description">
            <h2>PiecebyPiece</h2>
            <h3 style="color: white;">This website is for educational purposes and is not for profit.</h3>
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <!-- SLIDETAB -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="profileOffcanvas" aria-labelledby="profileOffcanvasLabel">

        <div class="offcanvas-header flex-column align-items-stretch border-bottom p-4">

            <div class="d-flex align-items-center mb-3">

                <img src="@profileImagePath"
                     alt="User Profile"
                     class="rounded-circle me-3"
                     style="width: 50px; height: 50px; object-fit: cover;">

                <div class="flex-grow-1">
                    <h5 class="offcanvas-title mb-0" id="profileOffcanvasLabel">
                        @fullName
                    </h5>
                    <div class="small text-muted">ID: @ViewData["UserID"]</div>
                </div>

                <button type="button" class="btn-close ms-2" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>

            @{
                var userId = ViewData["UserID"];
            }

            <div class="d-grid">
                <a class="btn-yellow"
                   style="font-size: 1rem; text-align:center;"
                   asp-area=""
                   asp-controller="cUserPersp"
                   asp-action="EditProfile"
                   asp-route-id="@userId">
                    <i class="bi bi-pencil-square me-1"></i> Edit Profile
                </a>
            </div>

        </div>



        <div class="offcanvas-body d-flex flex-column p-0">
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="cUserPersp"
                       asp-action="MyCourse"
                       class="nav-custom-link py-3 ps-4 check-course-before-nav">
                        <i class="bi bi-book-half me-2"></i> My Course
                    </a>
                </li>
                <li>
                    <a asp-controller="cUserPersp"
                       asp-action="CourseLibrary"
                       class="nav-custom-link py-3 ps-4 check-course-before-nav">
                        <i class="bi bi-grid-fill me-2"></i> Library
                    </a>
                </li>
                <li>
                    <a asp-controller="cCertificate"
                       asp-action="UserCertificateList"
                       class="nav-custom-link py-3 ps-4 check-course-before-nav">
                        <i class="bi bi-patch-check-fill me-2"></i> Certificate
                    </a>
                </li>
            </ul>

            <div class="border-top justify-content-end p-3 d-flex">
                <button type="button"
                        class="btn-logout"
                        data-bs-toggle="modal"
                        data-bs-target="#logoutConfirmModal">
                    Logout <i class="bi bi-box-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="logoutConfirmModal" tabindex="-1" aria-labelledby="logoutConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="logoutConfirmModalLabel"><i class="bi bi-box-arrow-right me-2"></i> ยืนยันการออกจากระบบ</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure to Logout?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancle</button>

                    <a id="confirmLogoutButton"
                       class="btn btn-danger"
                       data-logout-url="@Url.Action("Logout", "cUser")">
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </div>


    <!-- No Course Modal -->
    <div class="modal fade" id="noCourseModal" tabindex="-1" aria-labelledby="noCourseModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header bg-warning">
                    <h5 class="modal-title" id="noCourseModalLabel">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        No Course Enrolled
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body text-start">
                    <p class="mb-2"><strong>Please enroll at least one course before proceeding.</strong></p>
                    <p class="text-muted small">
                        You can browse available courses in the <strong>Course Library</strong>.
                    </p>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["NoCourse"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var modal = new bootstrap.Modal(document.getElementById('noCourseModal'));
                modal.show();
            });
        </script>
    }


</body>
</html>
