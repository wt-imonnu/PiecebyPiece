<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PiecebyPiece</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/card-box.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/PraewaStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PiecebyPiece.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <nav class="navbar navbar-expand-sm navbar-light mb-3" style="background: transparent; box-shadow: none; border: none;">
                        <div class="d-flex w-100 align-items-center">
                            <!-- LOGO -->
                            <div class="d-flex align-items-center me-4">
                                <a asp-area="" asp-controller="cCourse" asp-action="Index">
                                    <img src="~/images/logo.png" alt="PiecebyPiece" style="height: 70px; object-fit: contain;">
                                </a>
                            </div>

                            <!-- MENU -->
                            <div class="d-flex ms-auto align-items-center">
                                <ul class="nav me-3">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark fw-semibold"
                                           href="#"
                                           role="button"
                                           data-bs-toggle="dropdown"
                                           aria-expanded="false" style="color: #fff !important;">
                                            Menu
                                        </a>

                                        <ul class="dropdown-menu dropdown-menu-end custom-admin-dropdown">
                                            <li><a class="dropdown-item" asp-controller="cCourse" asp-action="Index">Course</a></li>
                                            <li><a class="dropdown-item" asp-controller="cUser" asp-action="Index">User</a></li>
                                            <li><a class="dropdown-item" asp-controller="cEnrollment" asp-action="Index">Enrollment</a></li>
                                            <li><a class="dropdown-item" asp-controller="cCertificate" asp-action="Index">Certificate</a></li>
                                            <li><a class="dropdown-item" asp-controller="cAdminPanel" asp-action="Index">Admin</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>

                            <!-- LOGOUT BUTTON -->
                            <div class="d-flex justify-content-end">
                                <button type="button"
                                        class="btn btn-yellow"
                                        data-bs-toggle="modal"
                                        data-bs-target="#logoutConfirmModal">
                                    Logout <i class="bi bi-box-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </nav>
                </div>             
            </div>
        </div>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        /*------NAVBAR SECTION-----*/
        .custom-admin-dropdown {
            min-width: 150px;
            width: auto;
            overflow: visible;
            max-height: none;
            background-color: #fff;
            border-radius: 0.375rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.175);
        }

            .custom-admin-dropdown .dropdown-item {
                white-space: nowrap;
                padding: 0.5rem 1rem;
                background-color: transparent;
            }

                .custom-admin-dropdown .dropdown-item:hover,
                .custom-admin-dropdown .dropdown-item:focus {
                    background-color: #5AB2A6 !important;
                    color: #fff !important;
                    border-radius: 0;
                }


        /*------FOOTER SECTION-----*/
        .custom-footer {
            background: #5AB2A6;
            text-align: center;
            margin-top: 20x;
            border-top-left-radius: 0px;
            border-top-right-radius: 0px;
        }

        .footer-logo-section {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
        }

        .footer-logo-img {
            width: 90px;
            height: 90px;
            object-fit: contain;
        }

        .footer-logo-text h2 {
            margin: 0;
            font-size: 32px;
            font-weight: 700;
            color: #000;
            line-height: 1.1;
        }

        .footer-logo-text h3 {
            margin: 0;
            font-size: 28px;
            font-weight: 700;
            color: #fff;
            line-height: 1.1;
        }

        .footer-description {
            margin-top: 25px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
            font-size: 14px;
            color: #fff;
        }

        /* RESPONSIVE */
        @@media(max - width: 600px) {
            .footer-logo-img {
                width: 70px;
                height: 70px;
            }

            .footer-logo-text h2 {
                font-size: 26px;
            }

            .footer-logo-text h3 {
                font-size: 22px;
            }
        }
    </style>


    <!-- ================= FOOTER ================= -->
    <hr />
    <footer class="custom-footer">
        <div class="footer-logo-section">

            <img src="~/images/logo.png" class="footer-logo-img" />

            <!-- ข้อความ -->
            <div class="footer-text">
                <h2>PiecebyPiece</h2>
                <h3>This website is for educational purposes and is not for profit.</h3>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<div class="modal fade" id="logoutConfirmModal" tabindex="-1" aria-labelledby="logoutConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="logoutConfirmModalLabel"><i class="bi bi-box-arrow-right me-2"></i> ยืนยันการออกจากระบบ</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure to Logout?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancle</button>

                <a id="confirmLogoutButton"
                   class="btn btn-danger"
                   data-logout-url="@Url.Action("Logout", "cUser")">
                    Logout
                </a>
            </div>
        </div>
    </div>
</div>